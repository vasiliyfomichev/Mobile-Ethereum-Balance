<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VF.Ethereum.AccountBalance"
             x:Class="VF.Ethereum.AccountBalance.MainPage">

    <StackLayout BackgroundColor="Green">
        <!-- Place new controls here -->
        <ListView ItemsSource="{Binding MyList}"
           IsPullToRefreshEnabled="True"
           RefreshCommand="{Binding RefreshCommand}"
           IsRefreshing="{Binding IsRefreshing}" />
        
        <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" TextColor="White" />
        <Label Text="9.99009990099" x:Name="lblBalance" FontSize="Large" TextColor="White" HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Label Text="ETH" HorizontalOptions="Center" TextColor="White"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>
    
</ContentPage>
